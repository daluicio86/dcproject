datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

enum Role {
  admin
  user
}

enum TipoCategoria {
  General
}

model Categoria {
  id        String      @id @default(uuid())
  name      String      @unique
  tipo      Int
  estado    Boolean     @default(true)
  Propiedad Propiedad[]
}

model Amenities {
  id          String      @id @default(uuid())
  name        String      @unique
  estado      Boolean     @default(true)
}

model TipoPropiedad {
  id          String      @id @default(uuid())
  name        String      @unique
  estado      Boolean     @default(true)
  propiedades Propiedad[]
}

enum UbicacionPropiedad {
  ciudad
  campo
}

enum RentaVenta {
  renta
  venta
}

model Propiedad {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String?
  apto        String?
  precio      Float    @default(0)
  metros      Float    @default(0)
  altura      Float    @default(0)
  address     String?
  geoLink     String?
  esPrincipal Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  rentaVenta  String?
  temperatura String?

  categoria   Categoria?     @relation(fields: [categoriaId], references: [id])
  categoriaId String

  tipoPropiedad   TipoPropiedad? @relation(fields: [tipoPropiedadId], references: [id])
  tipoPropiedadId String

  tipoMedida String?

  // ðŸ‘‰ Ciudad opcional
  ciudadId String?
  ciudad   Ciudad?      @relation(fields: [ciudadId], references: [id])

  images PropiedadImage[]
  User   User?            @relation(fields: [userId], references: [id])
  userId String?
}

model Favorito {
  id          String   @id @default(uuid())
  userId      String
  propiedadId String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model PropiedadImage {
  id           Int      @id @default(autoincrement())
  url          String
  type         String?  // "image" | "video"
  propiedadId  String
  propiedad    Propiedad @relation(fields: [propiedadId], references: [id])
}

model Contacto {
  id            String   @id @default(uuid())
  name          String?
  telefono      String?  @default("")
  email         String
  mensaje       String?
  fechaCreacion DateTime @default(now())
}

model Ciudad {
  id          String      @id @default(uuid())
  nombre      String
  descripcion String?
  url         String?
  servicios   Servicio[]
  propiedades Propiedad[]
}

model Servicio {
  id          String   @id @default(uuid())
  nombre      String
  descripcion String?
  ciudadId    String
  ciudad      Ciudad   @relation(fields: [ciudadId], references: [id])
  images      ServicioImage[]
}

model ServicioImage {
  id  Int    @id @default(autoincrement())
  url String

  servicio   Servicio @relation(fields: [servicioId], references: [id])
  servicioId String
}

// Auth

model Account {
  id                       String  @id @default(uuid())
  userId                   String  @map("user_id")
  type                     String
  provider                 String
  providerAccountId        String  @map("provider_account_id")
  refresh_token            String? @db.Text
  refresh_token_expires_in Int?
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?

  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  contactoId String?

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contactoId   String?

  @@map("sessions")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  password      String?   @default("")
  email         String    @unique
  role          String    @default("user")
  isActive      Boolean   @default(true)
  emailVerified DateTime? @map("email_verified")
  image         String?

  accounts Account[]
  sessions Session[]

  propiedades Propiedad[]
  favoritos   Favorito[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
